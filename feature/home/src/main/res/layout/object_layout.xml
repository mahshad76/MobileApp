<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="226dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/primaryColor"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/card_header"
            android:layout_width="292dp"
            android:layout_height="60dp"
            android:layout_margin="12dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_background"
                android:src="@drawable/shop" />

            <TextView
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/inter_semibold"
                android:gravity="bottom"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="5sp"
                android:textColor="@color/fontColor"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/description_object"
            android:layout_width="292dp"
            android:layout_height="32dp"
            android:layout_margin="12dp"
            android:fontFamily="@font/inter_regular"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="4sp"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_header" />

        <Button
            android:id="@+id/basket_button"
            android:layout_width="138dp"
            android:layout_height="32dp"
            android:layout_margin="12dp"
            android:background="@drawable/bottom_background"
            android:drawableRight="@drawable/plus_sm"
            android:fontFamily="@font/inter_semibold"
            android:padding="8dp"
            android:text="Add product"
            android:textColor="@color/fontColor"
            android:textSize="12dp"
            app:cornerRadius="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description_object" />

        <View
            android:id="@+id/spacer"
            android:layout_width="292dp"
            android:layout_height="2dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@color/spacerColor"
            app:layout_constraintBaseline_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/basket_button" />

        <LinearLayout
            android:layout_width="292dp"
            android:layout_height="16dp"
            android:layout_margin="12dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spacer">

            <TextView
                android:layout_width="50dp"
                android:layout_height="16dp"
                android:fontFamily="@font/inter_bold"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="4sp"
                android:text="Price:"
                android:textColor="@color/fontColor"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="37dp"
                android:layout_height="16dp"
                android:fontFamily="@font/inter_medium"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="4sp"
                android:textColor="@color/fontColor"
                android:textSize="12sp"
                android:textStyle="normal" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
